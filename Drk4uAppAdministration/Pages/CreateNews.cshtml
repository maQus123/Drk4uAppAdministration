@page
@model Drk4uAppAdministration.Pages.CreateNewsModel

@{
    ViewData["Title"] = "Create News";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4">@ViewData["Title"]</h1>
            <hr />
        </div>
    </div>
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="@Model.Title">Title: <span style="color: red;">*</span></label>
                    <input asp-for="@Model.Title" class="form-control" required="required" />
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="@Model.Content">Content: <span style="color: red;">*</span></label>
                    <textarea asp-for="@Model.Content" class="form-control" rows="5" required="required"></textarea>
                    <span asp-validation-for="@Model.Content" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="@Model.ImageFile">Image:</label>
                    <input asp-for="@Model.ImageFile" class="form-control" />
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="@Model.Category">Category: <span style="color: red;">*</span></label>
                    <select asp-for="@Model.Category" asp-items="Html.GetEnumSelectList<Category>()" class="form-control" required="required">
                        <option value="" selected="selected" disabled="disabled">Please select</option>
                    </select>
                    <span asp-validation-for="@Model.Category" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row pb-5 mb-5">
            <div class="col">
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-secondary" asp-page="/News">Cancel</a>
            </div>
        </div>
    </form>
</div>